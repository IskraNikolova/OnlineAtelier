@model OnlineAtelier.Web.Models.ViewModels.Users.EditUserVm
@{
    ViewBag.Title = "Edit";
}
<div class="panel panel-default panel-body">
   @using (Html.BeginForm("Edit", "Users", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
   {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @*<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />*@
                <span class="col-md-offset-2 btn btn-primary btn-file">
                    Избери файл...<input type="file" name="UserPhoto" id="fileUpload" accept=".png,.jpg,.jpeg,.gif,.tif" />
                </span>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Запиши" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Назад", "ProfilePage", "Users")
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}