@model IEnumerable<OnlineAtelier.Web.Models.ViewModels.Order.DisplayOrderVm>

@{
    ViewBag.Title = "_GetOrdersPartial";
}

@foreach (var order in Model)
{
    <div class="panel panel-default">
        <div class="panel-heading">
            <br/>
            <h5>@Html.DisplayFor(m => order.AppearanceName) - @Html.DisplayFor(m => order.AppearancePrice)лв.</h5>
            <div><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> @Html.ActionLink("Виж детайли", "Details", new { id = order.Id })</div>
            <em>@Html.DisplayFor(m => order.CreatedOn)</em>
        </div>
        <div class="panel-body">
            <div class="panel panel-default">
                <div class="panel-body">
                    @Html.Action("All", "PhotosOrder", new {id = order.Id})
                </div>
            </div>
            @Html.Action("GetComments", "OrderComment", new {id = order.Id})
            @Html.Action("AddComment", "OrderComment", new {id = order.Id})
            @Html.Action("AddPicture", "PhotosOrder", new { id = order.Id })
        </div>
    </div>
}