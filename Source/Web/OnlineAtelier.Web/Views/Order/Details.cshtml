@model OnlineAtelier.Web.Models.ViewModels.Order.DetailsOrderVm
@{
    ViewBag.Title = "Детайли";
}

<div class="panel panel-default">
    <div class="panel-heading">
        @Html.DisplayNameFor(m => m.CategoryName): @Html.DisplayFor(m => m.CategoryName)
    </div>
    <div class="panel-body">
        <p>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            @Html.DisplayFor(m => m.Details)
        </p>
    </div>
    <ul class="list-group">
        <li class="list-group-item">
            @Html.DisplayNameFor(m => m.DateOfDecision): @Html.DisplayFor(m => m.DateOfDecision)
        </li>
        <li class="list-group-item">
            @Html.DisplayNameFor(m => m.ShippingAddress): @Html.DisplayFor(m => m.ShippingAddress)
        </li>
        <li class="list-group-item">
            @Html.DisplayNameFor(m => m.ColorOfBox): @Html.DisplayFor(m => m.ColorOfBox)
        </li>
        <li class="list-group-item">
            @Html.DisplayNameFor(m => m.TextOfBox): @Html.DisplayFor(m => m.TextOfBox)
        </li>
        <li class="list-group-item">
            @Html.DisplayNameFor(m => m.TextOfCookies): @Html.DisplayFor(m => m.TextOfCookies)
        </li>
        <li class="list-group-item">
            <div class="panel panel-default">
                <div class="panel-heading">@Html.DisplayNameFor(m => m.ContentOfOrder)</div>
                <table class="table">
                    <tr>
                        <th>Форма</th>
                        <th>Брой от форма</th>
                    </tr>
                    @foreach (var cookie in Model.ContentOfOrder)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => cookie.Key)</td>
                            <td>@Html.DisplayFor(m => cookie.Value)</td>                    
                        </tr>
                    }
                </table>
            </div>
        </li>
        <li class="list-group-item">
            <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
            @if (User.IsInRole("Admin"))
            {
                <a href='@Url.Action("Index","AdminOrders", new {area="Admin"})'>Назад</a>
            }
            else
            {
                @Html.ActionLink("Назад", "ProfilePage", "Users")
            }
        </li>
    </ul>
</div>