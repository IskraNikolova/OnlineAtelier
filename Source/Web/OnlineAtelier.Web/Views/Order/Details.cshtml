@model OnlineAtelier.Web.Models.ViewModels.Order.DetailsOrderVm
@{
    ViewBag.Title = "Details";
}

<div class="panel panel-default">
    <div class="panel-heading">@Html.DisplayNameFor(m => m.CategoryName): @Html.DisplayFor(m => m.CategoryName)</div>
    <div class="panel-body">
        <p><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> @Html.DisplayFor(m => m.Details)</p>
    </div>

    <ul class="list-group">
        <li class="list-group-item">@Html.DisplayNameFor(m => m.DateOfDecision): @Html.DisplayFor(m => m.DateOfDecision)</li>
        <li class="list-group-item">@Html.DisplayNameFor(m => m.ShippingAddress): @Html.DisplayFor(m => m.ShippingAddress)</li>
        <li class="list-group-item">@Html.DisplayNameFor(m => m.ColorOfBox): @Html.DisplayFor(m => m.ColorOfBox)</li>
        <li class="list-group-item">@Html.DisplayNameFor(m => m.TextOfBox): @Html.DisplayFor(m => m.TextOfBox)</li>
        <li class="list-group-item">@Html.DisplayNameFor(m => m.TextOfCookies): @Html.DisplayFor(m => m.TextOfCookies)</li>
        <li class="list-group-item">
            @foreach (var galleryPicture in Model.GalleryUrls)
            {
                <img src=@galleryPicture alt="Gallery Picture"/>
            }
        </li>
        <li class="list-group-item"><span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> @Html.ActionLink("Назад", "ProfilePage", "Users")</li>
    </ul>   
</div>