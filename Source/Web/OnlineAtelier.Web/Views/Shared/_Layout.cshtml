@using OnlineAtelier.Web.Infrastructure.Constants
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/myJS")
    <script src="~/Scripts/jquery.signalR-2.2.1.min.js" type="text/javascript"></script>
    <script src="/signalr/hubs" type="text/javascript"></script>@*todo use this or delete signalr*@
</head>
<body>
<br/>
<br/>
<div id="fb-root"></div>
<div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <img src="http://cliparts.co/cliparts/6Ty/Xn6/6TyXn6kTn.png" style="width: 40px"/>
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

            @Html.ActionLink("With Love: Eli", Views.Index, "Home", new {area = ""}, new {@class = "navbar-brand"})
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Начало", Views.Index, "Home")</li>
                <li>@Html.ActionLink("За Нас", Views.About, "Home")</li>
                <li>@Html.ActionLink("Контакти", Views.Contact, "Home")</li>
                <li>@Html.ActionLink("Поръчай", "Add", "Order")</li>
                <li>@Html.ActionLink("Ценоразпис", "PriceList", "Appearance")</li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>
<div class="container body-content my">
    @RenderBody()
    <hr/>
    <footer>
        <div class="row">
            <div class="panel-body">
                <div class="col-sm-4">
                    <h2>With love: Eli</h2>
                    <hr/>
                    @Html.ActionLink("Начало", Views.Index, "Home")
                    <br/>
                    @Html.ActionLink("За Нас", Views.About, "Home")
                    <br/>
                    @Html.ActionLink("Контакти", Views.Contact, "Home")
                </div>
                <div class="col-sm-4">
                    <h2>Нашите продукти</h2>
                    <hr/>
                    @Html.ActionLink("Галерия", "PostGallery", "Posts")
                    <br/>
                    @Html.ActionLink("Поръчай", "Add", "Order")
                    <br/>
                    @Html.ActionLink("Ценоразпис", "PriceList", "Appearance")
                </div>
                <div class="col-sm-4">
                    <h2>Следвай ни</h2>
                    <hr/>
                    <div>
                        <div class="fb-follow" data-href="https://www.facebook.com/WithLoveEli" data-layout="button" data-size="small" data-show-faces="true"></div>
                        <div class="fb-share-button" data-href="https://www.facebook.com/WithLoveEli/" data-layout="button_count" data-size="small" data-mobile-iframe="true">
                            <a class="fb-xfbml-parse-ignore" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fwww.facebook.com%2FWithLoveEli%2F&amp;src=sdkpreparse">Споделяне</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="panel-body">
                <div class="col-sm-6">
                    <p>&copy; @DateTime.Now.Year - Суит Арт Дизаин.ООД</p>
                </div>
                <div class="col-sm-offset-4 col-sm-2">
                    <p>
                        Made with <span class="glyphicon glyphicon-heart" aria-hidden="true"></span> in BG.
                    </p>
                </div>
            </div>
        </div>
    </footer>
</div>
@*@Scripts.Render("~/bundles/jquery") todo if no use this delete comments*@
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>