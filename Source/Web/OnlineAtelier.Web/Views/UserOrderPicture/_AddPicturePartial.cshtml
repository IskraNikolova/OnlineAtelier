@model OnlineAtelier.Web.Models.ViewModels.UsersPicture.AddPictureViewModel
@{
    ViewBag.Title = "_AddPicturePartial";
}

@using (Html.BeginForm("AddPicture", "UserOrderPicture", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <input type="file" value="" name="UserPictures" id="fileUpload" accept=".png,.jpg,.jpeg,.gif,.tif" />
                        <input type="submit" class="btn btn-default btn-file" value="Добави снимка"/>                     
                    </div>
                </div>
            </div>
        </div>
    </div>
}