@model List<ICollection<OnlineAtelier.Web.Models.ViewModels.Posts.PostVm>>
@{
    ViewBag.Title = "PostGallery";
}

<br/>
<div class="row">
    @foreach (var album in Model)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src=@album.First().Image.Url>
                <div class="caption">
                    <h5>@album.First().Category.Name</h5>
                    <p>
                        @Html.ActionLink("Разгледай", "LoadPostByCategory", new {id = @album.First().Category.Id})
                    </p>
                </div>
            </div>
        </div>
    }
</div>