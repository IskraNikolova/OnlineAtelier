@model OnlineAtelier.Web.Models.ViewModels.UsersPicture.AddPictureViewModel
@{
    ViewBag.Title = "_AddPicturePartial";
}

@using (Html.BeginForm("AddPicture", "PhotosOrder", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-lg-6">
            <div class="input-group">
                <input type="file" class="form-control" value="" name="UserPictures" id="fileUpload" accept=".png,.jpg,.jpeg,.gif,.tif" />
                <span class="input-group-btn">
                    <span class="glyphicon glyphicon-camera" aria-hidden="true"></span>
                    <button class="btn btn-default" type="submit"> <span class="glyphicon glyphicon-camera" aria-hidden="true"></span></button>
                </span>
            </div>
        </div>
    </div>
}