@model OnlineAtelier.Web.Models.ViewModels.Acount.ProfilePageViewModel
@{
    ViewBag.Title = "Profile Page";
}
<div class="row">
    <div class="col-md-3">
        <br />
        <div class="panel panel-body">
            <img class="userPhoto" src="@Url.Action("UserPhotos", "UserProfilePicture")" />
            <h3>@Html.DisplayFor(m => m.FirstName)</h3>
            <div>
                @Html.ActionLink("Направи Поръчка", "Add", "Order", null, new {@class = "btn btn-primary"})
            </div>
        </div>
    </div>
    <div class="col-md-7">
        <br />
        <div class="panel panel-body">
            <div><h5>Моите Поръчки</h5></div>
            <hr />
            </div>
            @Html.Action("GetOrders", "Order", new { id = Model.Id })
        </div>
</div>