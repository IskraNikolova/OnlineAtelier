@model IEnumerable<OnlineAtelier.Web.Models.ViewModels.Users.DisplayAllUsersVm>
@{
    ViewBag.Title = "Index";
}
<div class="panel panel-default">
    <div class="panel-heading">
        <span class="glyphicon glyphicon-phone-alt" aria-hidden="true"> Телефонен указател </span>
    </div>
    <div class="panel-body">
        @using (Ajax.BeginForm("AdminSearch", new { area = "Admin" }, new AjaxOptions()
        {
            UpdateTargetId = "result",
            InsertionMode = InsertionMode.Replace
        }, new {id="searchPhone"}))
        {
            <div class="col-sm-3 col-md-3">
                <form class="navbar-form" role="search">
                    <div class="input-group">
                        <input type="text" class="form-control" aria-label="..." , placeholder="Search" name="query" oninput="changed()">
                        <div class="input-group-btn">
                            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                        </div>
                    </div>
                </form>
            </div>
        }
    </div>
</div>

<div id="result">@Html.Partial("_UsersPartial", Model)</div>

@section scripts
{
    <script>
        function changed() {
            $("#searchPhone").first().submit();
        }
    </script>
}