
@{
    ViewBag.Title = "Index";
}

<h2>Изпрати съобщение</h2>
@using (Ajax.BeginForm("SendNotification", "Notifications", new AjaxOptions()
{
    HttpMethod = "POST",
    UpdateTargetId = "results",
    InsertionMode = InsertionMode.InsertAfter
}))
{
    <label for="type" class="control-label">Тип на съобщението:</label>
    <input type="text" name="type" id="type" class="form-control" />
    <label for="notification" class="control-label">Текст:</label>
    <input type="text" name="notification" id="notification" class="form-control" />
    <br/>
    <input type="submit" value="Изпрати" class="btn btn-primary" />
}

<div id="results"></div>