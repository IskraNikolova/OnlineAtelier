@model OnlineAtelier.Web.Models.ViewModels.AdminArea.Appearance.AppearanceCreateVm
@{
    ViewBag.Title = "";
}

<div>
    <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
    @Html.ActionLink("Назад", "All", "AdminPosts")
</div>

<h3>Добави нов продукт</h3>
<div class="panel panel-default panel-body">
