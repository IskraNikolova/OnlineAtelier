@using OnlineAtelier.Web.Infrastructure.Constants

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - With Love Eli</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/jquery.signalR-2.2.1.min.js" type="text/javascript"></script>
    <script src="/signalr/hubs" type="text/javascript"></script>
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <img src="http://cliparts.co/cliparts/6Ty/Xn6/6TyXn6kTn.png" style="width: 40px" />
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("With Love: Eli", Views.Index, "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Начало", "All", "AdminPosts")</li>
                    <li>@Html.ActionLink("Публикувай", "Create", "AdminPosts")</li>
                    <li>@Html.ActionLink("Нови поръчки", Views.Index, "AdminOrders")</li>
                    <li>@Html.ActionLink("Телефонен указател", "Phonebook", "AdminUsers")</li>
                    <li>@Html.ActionLink("Изпрати съобщение", "Index", "Notifications")</li>
                    <li><a href="@Url.Action("Index", "Home", new {area = ""})">Излез от административния панел</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content my">
        @RenderBody()
        <br/>
        <br/>
        <br/>
        <footer class="eli">
            <p>&copy; @DateTime.Now.Year - Суит Арт Дизаин</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>