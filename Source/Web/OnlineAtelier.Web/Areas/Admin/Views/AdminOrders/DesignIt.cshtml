@using System.Web.Mvc.Html
@model OnlineAtelier.Web.Models.ViewModels.Order.DesignOrderVm
@{
    ViewBag.Title = "";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        <div class="thumbnail">Имаш @( Model.Appearance.CookiesCount - Model.AllForms.ToList().Count) броя за попълване</div>
        <div class="form-group">
            @Html.LabelFor(m => m.FiguresName, new { @class = "col-md-2 control-label" })
            <div class="col-md-6">
                @Html.DropDownListFor(m => m.FiguresName, Model.FiguresSelectList, "- Избери фигура -", new { @class = "form-control" })*
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-8">
                <input type="submit" class="btn btn-default" value="Добави форма" />
            </div>
        </div>
    </div>
    <div class="thumbnail">
        @foreach (var name in Model.AllForms)
        {
        <p>@name</p>
        }
    </div>
}
        <div>
            <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
            @Html.ActionLink("Назад", "Index", "AdminOrders")
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }