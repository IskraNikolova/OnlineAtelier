@model OnlineAtelier.Web.Models.ViewModels.Order.EditOrderDateVm

@{
    ViewBag.Title = "EditDate";
}
<br />
<div class="panel panel-default panel-body">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(m => m.DateOfDecision, new { @class = "col-md-2 control-label" })
                <div class="col-md-6">
                    @Html.EditorFor(m => m.DateOfDecision, null, new { htmlAttributes = new { @class = "form-control", type = "date" } })*
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Редактирай" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
        @Html.ActionLink("Назад", "Index", "AdminOrders")
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}